<?xml version="1.0" encoding="utf-8"?>


<card_view:android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    card_view:cardCornerRadius="6dp"
    card_view:cardBackgroundColor="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test CardView"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:id="@+id/ll_additional_item_view_panel"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_item_edit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="10sp"
            android:text="edit"/>

        <Button
            android:id="@+id/btn_delete_edit"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textSize="10sp"
            android:text="delete"/>

    </LinearLayout>




    </LinearLayout>
</card_view:android.support.v7.widget.CardView>